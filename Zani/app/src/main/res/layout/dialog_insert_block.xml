<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/radius_all_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="차단할 번호를 \n입력해 주세요"
            android:textSize="20dp"
            android:textColor="@color/colorBasicComment"/>
        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_baseline_clear_gray" />
    </LinearLayout>

    <EditText
        android:id="@+id/number_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/number_input"
        android:hint="010)"
        android:textSize="30dp"
        android:maxLength="13"
        android:paddingVertical="18dp"
        android:paddingHorizontal="20dp"
        android:layout_margin="20dp"
        android:inputType="phone"
        android:textColor="@color/colorBasicComment"
        android:textColorHint="@color/colorHint"
        android:textCursorDrawable="@drawable/cursor"
        android:elevation="10dp"
        android:imeOptions="actionDone"/>
</LinearLayout>